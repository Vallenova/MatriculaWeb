<% provide(:titulo, "Crear Apoderado") %>

    <%= form_for @apoderado,  class: "form-horizontal center" do |f| %>
    <div class="btn-group">
    <%= render 'layouts/menu_mantenimiento' %>
    <%= f.submit "Crear", class: "btn btn-default" %>
    </div>
      <br />
      <br />
      <%= render 'shared/error_messages' %>
      <br />
      <div class="form-group">
      	<%= f.label :nombres, "Nombres:", class: "col-md-3 control-label" %>
      	<div class="col-md-4">
      		<%= f.text_field :nombres, class: "form-control" %>
      	</div>
      </div>
      <br />
      <br />
      <div class="form-group">
      	<%= f.label :apellidos, "Apellidos:", class: "col-md-3 control-label" %>
      	<div class="col-md-4">
      		<%= f.text_field :apellidos, class: "form-control" %>
      	</div>
      </div>
      <br />
      <br />
      <div class="form-group">
      	<%= f.label :dni, "Documento de Identidad:", class: "col-md-3 control-label" %>
      	<div class="col-md-4">
      		<%= f.text_field :dni, class: "form-control" %>
      	</div>
      </div>
      <br />
      <br />
      <div class="form-group">
      	<%= f.label :email, "Correo electrónico:", class: "col-md-3 control-label" %>
      	<div class="col-md-4">
      		<%= f.text_field :email, class: "form-control" %>
      	</div>
      </div>
      <br />
      <br />
      <div class="form-group">
      	<%= f.label :celular, "Celular:", class: "col-md-3 control-label" %>
      	<div class="col-md-4">
      		<%= f.text_field :celular, class: "form-control" %>
      	</div>
      </div>
      <br />
      <br />
      <div class="form-group">
      	<%= f.label :direccion, "Dirección:", class: "col-md-3 control-label" %>
      	<div class="col-md-4">
      		<%= f.text_field :direccion, class: "form-control" %>
      	</div>
      </div>
      <br />
      <br />
      <div class="form-group">
      	<%= f.label :fec_nac, "Fecha de Nacimiento:", class: "col-md-3 control-label" %>
      	<div class="col-md-4">
          <div class="input-group date" id="datetimepicker1" >
      		  <%= f.text_field :fec_nac, class: "form-control" %>
            <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
          </div>
      	</div>
      </div>
      <br />
      <br />
      <div class="form-group">
      	<%= f.label :telefono, "Teléfono(Opcional):", class: "col-md-3 control-label" %>
      	<div class="col-md-4">
      		<%= f.text_field :telefono, class: "form-control" %>
      	</div>
      </div>
      <br />
      <br />
      <div class="form-group">
        <%= f.label :telefono, "Sexo:", class: "col-md-3 control-label" %>
        <div class="col-md-4">
  	      <div class="input-group">
  	        <%= f.radio_button :sexo, 'M', :checked => true %> Masculino 
  	        <br />
  	        <%= f.radio_button :sexo, 'F', :checked => false %> Femenino
  	      </div>
  	    </div>
      </div>

    <% end %>

<script type="text/javascript">
  $(function () {
    $('#datetimepicker1').datetimepicker({
      language: 'es',
      pickTime: false
    });
  });
</script>
