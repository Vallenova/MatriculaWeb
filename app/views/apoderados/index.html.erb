<% provide(:titulo, "Apoderados") %>
<div class="btn-toolbar" role="toolbar">
  <div class="btn-group">
    <div class="btn btn-default"><%= link_to "Nuevo", "/nuevo_apoderado", id: "btn-nuevo" %></div>
    <div class="btn btn-default"><%= link_to "Listar", "/apoderados", id: "btn-listar" %></div>
  </div>
</div>
<br />
<br />

<%= form_tag apoderados_path, :method => 'get' , :id => "apoderados_search" , remote: true do %>
 <div class="form-group" align="right">
  <%= text_field_tag :search,  params[:search] %>
  <%= submit_tag "Buscar", :nombres => nil %>
 </div>
 <div id="apoderados"><%= render 'apoderados' %></div>
<% end %>